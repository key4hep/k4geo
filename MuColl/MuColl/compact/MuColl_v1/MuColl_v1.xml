        <constant name="HCalRing_outer_radius"      value="HCalEndcap_outer_radius"/>
        <constant name="HCalRing_min_z"             value="2353.5*mm"/>
        <constant name="HCalRing_max_z"             value="HCalEndcap_min_z"/>
