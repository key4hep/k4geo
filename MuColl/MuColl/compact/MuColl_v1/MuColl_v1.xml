        <region name="VertexEndcapRegion"        />
        <region name="InnerTrackerBarrelRegion"  />
        <region name="OuterTrackerBarrelRegion"  />
        <region name="InnerTrackerEndcapRegion"  />
        <region name="OuterTrackerEndcapRegion"  />
    </regions>


